{
  "name": "Single ATM Call",
  "description": "Single at-the-money call option for basic delta hedging training",
  "selection_criteria": {
    "option_type": "CALL",
    "strike_range": {
      "min_percentile": 45,
      "max_percentile": 55
    },
    "weekly_codes": ["3CN5", "3IN5", "3MN5"],
    "min_data_size": 1000,
    "sort_by": "data_size"
  },
  "max_options": 1,
  "position_weights": {
    "primary": 1.0
  },
  "training_params": {
    "sequence_length": 100,
    "batch_size": 32,
    "learning_rate": 0.001,
    "n_epochs": 20,
    "checkpoint_interval": 100,
    "validation_interval": 5,
    "validation_batch_size_factor": 0.25,
    "entropy_weight": 0.01,
    "policy_loss_weight": 1.0,
    "value_loss_weight": 0,
    "l2_regularization_weight": 0.0001,
    "base_execution_cost": 0.01,
    "variable_execution_cost": 0.001,
    "market_impact_scale": 1,
    "sharpness_regularizer": 0.005,
    "entropy_gate_k": 3.0,
    "temporal_push": 0.05,
    "temporal_smooth": 0.01
  },
  "time_series_params": {
    "align_to_daily": true,
    "split_ratios": [0.7, 0.2, 0.1],
    "min_daily_sequences": 1,
    "enable_time_based_split": true
  }
}